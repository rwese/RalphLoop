{
  "name": "Codex Backend",
  "version": "1.0.0",
  "description": "Configuration for integrating RalphLoop with OpenAI Codex CLI",
  "enabled": false,
  "cli": {
    "name": "codex",
    "installUrl": "https://github.com/openai/codex",
    "commands": {
      "trigger": "codex ralph-trigger",
      "status": "codex ralph-status",
      "config": "codex ralph-config"
    }
  },
  "integration": {
    "evaluationTrigger": {
      "command": "ralph-trigger",
      "description": "Trigger RalphLoop evaluation loop",
      "arguments": ["--iterations", "--prompt", "--mode"]
    },
    "statusCheck": {
      "command": "ralph-status",
      "description": "Check RalphLoop status and progress",
      "arguments": ["--progress", "--state"]
    },
    "configuration": {
      "command": "ralph-config",
      "description": "Configure RalphLoop settings",
      "arguments": ["--set", "--get", "--list"]
    }
  },
  "hooks": {
    "preEvaluation": [],
    "postEvaluation": [],
    "onError": ["logError", "notifyUser"]
  },
  "environment": {
    "OPENAI_API_KEY": {
      "required": false,
      "description": "OpenAI API key for Codex services"
    },
    "RALPH_LOOP_ENABLED": {
      "required": false,
      "default": "true",
      "description": "Enable RalphLoop integration"
    }
  },
  "customCommands": [
    {
      "name": "evaluate",
      "command": "ralph",
      "arguments": ["$ITERATIONS"],
      "description": "Start evaluation loop",
      "mode": "autonomous"
    },
    {
      "name": "status",
      "command": "ralph",
      "arguments": ["--status"],
      "description": "Check current status",
      "mode": "interactive"
    },
    {
      "name": "validate",
      "command": "ralph",
      "arguments": ["--validate"],
      "description": "Validate current state",
      "mode": "validation"
    }
  ],
  "documentation": {
    "readme": "backends/codex/README.md",
    "examples": "backends/codex/examples/"
  }
}
