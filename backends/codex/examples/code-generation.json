{
  "name": "code-generation",
  "description": "Code generation and improvement workflow with Codex",
  "enabled": true,
  "settings": {
    "iterations": 15,
    "mode": "autonomous",
    "promptFile": "examples/code-generation/prompt.md"
  },
  "environment": {
    "RALPH_MODE": "autonomous",
    "RALPH_ITERATIONS": "15",
    "OPENAI_API_KEY": "${OPENAI_API_KEY}"
  },
  "hooks": {
    "preEvaluation": ["validateApiKey", "checkCodebase"],
    "postEvaluation": ["generateCodeReport", "updateDocumentation"],
    "onError": ["handleRateLimit", "logApiError"]
  },
  "codexSettings": {
    "temperature": 0.7,
    "maxTokens": 2000,
    "model": "codex-davinci-002"
  }
}
