{
  "version": "1.0.0",
  "name": "RalphLoop Backends Configuration",
  "description": "Backend integrations for Claude Code, Codex, and Kilo CLIs with custom command support",
  "backends": {
    "claude-code": {
      "name": "Claude Code CLI",
      "description": "Anthropic's Claude Code CLI integration for autonomous development",
      "enabled": false,
      "configPath": "backends/claude-code/config.json",
      "commands": {
        "trigger": "ralph-trigger",
        "status": "ralph-status",
        "config": "ralph-config"
      },
      "environment": {
        "CLAUDE_API_KEY": {
          "required": false,
          "description": "Anthropic API key for Claude services"
        },
        "CLAUDE_CODE_ENABLED": {
          "required": false,
          "description": "Enable Claude Code backend integration"
        }
      }
    },
    "codex": {
      "name": "OpenAI Codex",
      "description": "OpenAI Codex CLI integration for code generation and analysis",
      "enabled": false,
      "configPath": "backends/codex/config.json",
      "commands": {
        "trigger": "ralph-trigger",
        "status": "ralph-status",
        "config": "ralph-config"
      },
      "environment": {
        "OPENAI_API_KEY": {
          "required": false,
          "description": "OpenAI API key for Codex services"
        },
        "CODEX_ENABLED": {
          "required": false,
          "description": "Enable Codex backend integration"
        }
      }
    },
    "kilo": {
      "name": "Kilo CLI",
      "description": "Kilo CLI integration for autonomous development workflows",
      "enabled": false,
      "configPath": "backends/kilo/config.json",
      "commands": {
        "trigger": "ralph-trigger",
        "status": "ralph-status",
        "config": "ralph-config"
      },
      "environment": {
        "KILO_API_KEY": {
          "required": false,
          "description": "Kilo API key for services"
        },
        "KILO_ENABLED": {
          "required": false,
          "description": "Enable Kilo backend integration"
        }
      }
    }
  },
  "customCommands": {
    "enabled": true,
    "triggerPattern": "ralph-",
    "evaluationLoopTrigger": "ralph-trigger",
    "configFile": "backends/index.json"
  },
  "evaluation": {
    "modes": ["autonomous", "interactive", "validation"],
    "defaultMode": "autonomous",
    "maxIterations": 100,
    "validationEnabled": true
  }
}
