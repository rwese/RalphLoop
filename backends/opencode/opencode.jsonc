{
  "$schema": "https://opencode.ai/config.json",
  "agent": {
    "AGENT_RALPH": {
      "description": "Fast execution mode - minimal safety checks",
      "mode": "primary",
      "reasoningEffort": "high",
      "textVerbosity": "medium",
      "permission": {
        "*": "allow",
        "question": "deny"
      },
      "prompt": "{file:prompts/agent/AGENT_RALPH.md}"
    }
  },
  "default_agent": "AGENT_RALPH",
  "formatter": {
    "prettier": {
      "command": ["npx", "prettier", "--write", "$FILE"],
      "extensions": [".md"]
    }
  },
  "instructions": ["AGENTS.md", "AGENTS.local.md"],
  "plugin": ["opencode-pty@0.1.4"],
  "mcp": {
     "MiniMax": {
      "type": "local",
      "command": [
        "uvx", "minimax-coding-plan-mcp", "-y"
      ],
      "environment": {
        "MINIMAX_API_KEY": "{env:MINIMAX_API_KEY}",
        "MINIMAX_API_HOST": "https://api.minimax.io"
      },
      "enabled": true
    },
    "exa": {
      "type": "local",
      "command": ["npx", "-y", "exa-mcp-server"]
    },
    "context7": {
      "command": ["npx", "-y", "@upstash/context7-mcp", "--api-key", "{env:CONTEXT7_API_KEY}"],
      "enabled": true,
      "type": "local"
    },
    "playwright": {
      "command": ["npx", "@playwright/mcp@latest"],
      "enabled": true,
      "type": "local"
    }
  }
}
