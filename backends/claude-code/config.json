{
  "name": "Claude Code Backend",
  "version": "1.0.0",
  "description": "Configuration for integrating RalphLoop with Claude Code CLI",
  "enabled": true,
  "cli": {
    "name": "claude",
    "installUrl": "https://github.com/anthropics/claude-code-cli",
    "commands": {
      "trigger": "claude ralph-trigger",
      "status": "claude ralph-status",
      "config": "claude ralph-config"
    }
  },
  "integration": {
    "evaluationTrigger": {
      "command": "ralph-trigger",
      "description": "Trigger RalphLoop evaluation loop",
      "arguments": [
        "--iterations",
        "--prompt",
        "--mode"
      ]
    },
    "statusCheck": {
      "command": "ralph-status",
      "description": "Check RalphLoop status and progress",
      "arguments": [
        "--progress",
        "--state"
      ]
    },
    "configuration": {
      "command": "ralph-config",
      "description": "Configure RalphLoop settings",
      "arguments": [
        "--set",
        "--get",
        "--list"
      ]
    }
  },
  "hooks": {
    "preEvaluation": [],
    "postEvaluation": [],
    "onError": [
      "logError",
      "notifyUser"
    ]
  },
  "environment": {
    "CLAUDE_API_KEY": {
      "required": false,
      "description": "Anthropic API key for Claude services"
    },
    "RALPH_LOOP_ENABLED": {
      "required": false,
      "default": "true",
      "description": "Enable RalphLoop integration"
    }
  },
  "customCommands": [
    {
      "name": "evaluate",
      "command": "ralph",
      "arguments": [
        "$ITERATIONS"
      ],
      "description": "Start evaluation loop",
      "mode": "autonomous"
    },
    {
      "name": "status",
      "command": "ralph",
      "arguments": [
        "--status"
      ],
      "description": "Check current status",
      "mode": "interactive"
    },
    {
      "name": "validate",
      "command": "ralph",
      "arguments": [
        "--validate"
      ],
      "description": "Validate current state",
      "mode": "validation"
    }
  ],
  "documentation": {
    "readme": "backends/claude-code/README.md",
    "examples": "backends/claude-code/examples/"
  }
}
