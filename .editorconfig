# EditorConfig is helpful for projects on multiple editors
# https://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.json]
indent_style = space
indent_size = 2

[*.jsonc]
# JSONC (JSON with Comments) configuration
# Supports comments and trailing commas
indent_style = space
indent_size = 2
